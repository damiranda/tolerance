@article{sapiro_gender_2001,
  title = {Gender {{Equality}} in the {{Public Mind}}},
  author = {Sapiro, Virginia and Conover, Pamela Johnston},
  year = {2001},
  month = feb,
  journal = {Women \& Politics},
  volume = {22},
  number = {1},
  pages = {1--36},
  issn = {0195-7732},
  doi = {10.1300/J014v22n01_01},
  abstract = {Most conceptual research on equality revolves around theoretical texts or legal theory and decisions, thus reflecting the thought of legal, political, or cultural elites. But in a democratic polity, we must attend to the political thought not just of politicos and academics, but ordinary citizens as well. In terms of its political significance, ``What does equality mean'' requires answering the question: what does equality mean to the mass public? We thus probe the meanings of ``gender equality'' in the public mind, using a unique set of questions included in the National Election Studies 1991 Pilot Study, and con-textualized within the literatures of feminist and legal theory and political psychology and public opinion. Most importantly, we distinguish among ``empirical'' and ``normative'' equality and discontent and among the domains of the polity, economy, and family; feature the problem of ``equality'' versus ``sameness'' and consider the relationship of these orientations to people's own structural circumstances and their other policy and political attitudes. Among the key findings, empirical and normative equality and discontent are functionally different and grounded differently in people's everyday experiences; they distinguish among different domains of life and, especially, between public and private; and there are generational differences in the relationship of ``equality'' to ``sameness.'' We discuss substantive and methodological implications.}
}

@incollection{schulz_percepciones_2018,
  title = {Percepciones de Los Estudiantes Sobre La Cohesi\'on Social y La Diversidad},
  booktitle = {Percepciones de Los J\'ovenes Acerca Del Gobierno, La Convivencia Pac\'ifica y La Diversidad En Cinco Pa\'ises de {{Am\'erica Latina Estudio Internacional}} Sobre {{Educaci\'on C\'ivica}} y {{Ciudadana}} 2016 de La {{IEA Informe Lationamericano}}},
  author = {Schulz, Wolfram and Ainley, John and Cox, Cristi{\'a}n and Friedman, Tim},
  year = {2018},
  abstract = {Aspectos destacados del cap\'itulo La mayor\'ia de estudiantes en pa\'ises latinoamericanos participantes en ICCS 2016 manifestaron que no les molestar\'ia tener miembros de diferentes grupos minoritarios como vecinos. \textbullet{} En promedio, m\'as de cuatro quintas partes de los estudiantes indicaron que no les molestar\'ia tener miembros de grupos minoritarios como vecinos. (Tabla 5.1) \textbullet{} Los estudiantes en Chile y Colombia mostraron niveles relativamente m\'as altos de aceptaci\'on a la diversidad en el vecindario, mientras que los estudiantes de la Rep\'ublica Dominicana y Per\'u expresaron niveles m\'as bajos (Tabla 5.2). \textbullet{} Estudiantes mujeres, estudiantes que asist\'ian al colegio en \'areas urbanas y estudiantes que ten\'ian mayores niveles de conocimiento c\'ivico tienen mayor probabilidad de aceptar la diversidad en el vecindario (Tabla 5.2). La mayor\'ia de estudiantes en pa\'ises latinoamericanos participantes en ICCS 2016 expresaron actitudes positivas hacia la homosexualidad. \textbullet{} Mientras la mayor\'ia de los estudiantes de la regi\'on expresaron su apoyo a los \'items del cuestionario sobre la igualdad de derecho de las personas homosexuales, hubo menos consenso respecto a temas relacionados con el matrimonio entre personas del mismo sexo y los derechos de adoptar hijos (Tabla 5.3). \textbullet{} En Chile, Colombia y M\'exico la proporci\'on de estudiantes en ICCS 2016 que expresaron su acuerdo con el matrimonio entre personas del mismo sexo fue mucho mayor que en 2009. Sin embargo, en Rep\'ublica Dominicana el porcentaje de estudiantes que manifestaron esa opini\'on fue significativamente menor que en el ciclo anterior (Tabla 5.3). \textbullet{} Los porcentajes promedio de estudiantes chilenos y mexicanos con actitudes positivas hacia la homosexualidad fueron significativamente m\'as altos que el promedio latinoamericano. Por el contrario, los estudiantes en Rep\'ublica Dominicana y Per\'u registraron actitudes significativamente menos positivas (Tabla 5.3). \textbullet{} Estudiantes mujeres, estudiantes que asist\'ian a colegios en \'areas urbanas y aquellos con niveles m\'as altos de conocimiento c\'ivico expresaron actitudes m\'as positivas hacia la homosexualidad que los dem\'as estudiantes (Tabla 5.4). Estudiantes en pa\'ises latinoamericanos participantes en ICCS 2016 percibieron distintos niveles de discriminaci\'on contra de diferentes grupos sociales. \textbullet{} En promedio, los homosexuales fueron las personas m\'as discriminadas seg\'un las percepciones de los estudiantes. Los porcentajes m\'as bajos de discriminaci\'on percibida fueron para j\'ovenes y personas mayores (Tabla 5.5).}
}

@inproceedings{schulz_students_2018,
  title = {Students' Attitudes toward Equality Opportunities, Trust in Civic Institutions and Endorsement of Religious Influence},
  author = {Schulz, Wolfram and Ainley, John},
  year = {2018},
  abstract = {Este documento discutir\'a los resultados de la ICCS 2016 con respecto a las creencias de los estudiantes sobre temas de relevancia en sociedad. Este documento se centra en cuatro constructos de actitud: el apoyo de los estudiantes a la igualdad de g\'enero, el apoyo de los estudiantes a la igualdad de derechos para todos los grupos \'etnicos y raciales, la confianza de los estudiantes en las instituciones c\'ivicas, y el respaldo de los estudiantes a la influencia de la religi\'on en la sociedad (que se midi\'o como parte de una opci\'on internacional en la que participaron la mayor\'ia de los pa\'ises). Describe el alcance de estas creencias, los cambios desde 2009, y sus asociaciones con las caracter\'isticas de los estudiantes, los antecedentes del hogar y variables de participaci\'on, y factores relacionados con el aprendizaje c\'ivico en la escuela y las interacciones sociales en casa. Los resultados ya publicados de la ICCS 2009 sugieren un fuerte respaldo general a la igualdad oportunidades para los grupos de g\'enero, as\'i como para los grupos \'etnicos y raciales, sin embargo, con considerables variaci\'on entre los pa\'ises. La confianza de los estudiantes en las instituciones c\'ivicas era m\'as limitada. Los factores asociados con el aprendizaje c\'ivico, en particular el aprendizaje de conocimientos c\'ivicos, se asociaron positivamente con el respaldo de la igualdad de oportunidades, y negativamente con el respaldo de la influencia religiosa. Adem\'as, los hallazgos sugieren asociaciones de estas actitudes (en relaci\'on con la igualdad de g\'enero y \'etnica/racial, la confianza en las instituciones c\'ivicas y la influencia religiosa en la sociedad) con los factores del clima escolar, as\'i como los antecedentes del hogar y la participaci\'on.}
}

