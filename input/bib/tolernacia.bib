@article{spierings_gender_2015,
  title = {Gender {{Equality Attitudes}} among {{Turks}} in {{Western Europe}} and {{Turkey}}: {{The Interrelated Impact}} of {{Migration}} and {{Parents}}' {{Attitudes}}},
